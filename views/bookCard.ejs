<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Карточка книги</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #e09, #3023ae);
            color: #333;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            min-height: 100vh;
            padding: 2rem;
        }

        .card {
            padding: 2rem;
            border-radius: 10px;
            max-width: 600px;
            width: 100%;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            position: relative;
            margin-top: 3rem;
            background-color: rgba(255, 255, 255, 0.55);
            animation: pulse 3s infinite;
        }

        h1 {
            margin-bottom: 1rem;
            color: #fff;
            text-align: center;
        }

        p {
            margin: 0.5rem 0;
        }

        .status {
            font-weight: bold;
            margin: 1rem 0;
        }

        .status.out-of-stock {
            color: #dc3545;
        }

        .form-section {
            margin: 2rem 0;
        }

        form {
            margin-top: 1rem;
        }

        label {
            display: block;
            font-size: 1rem;
            margin: 0.5rem 0;
            color: #495057;
        }

        input[type="text"], input[type="date"] {
            width: 100%;
            padding: 0.7rem;
            border: 1px solid darkblue;
            border-radius: 5px;
            animation: pulse 5s infinite;
        }

        button {
            padding: 0.7rem 1.5rem;
            font-size: 1rem;
            border: none;
            border-radius: 30px;
            background: linear-gradient(45deg, #3023ae, #e09);
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .button span {
            position: relative;
            z-index: 1;
        }

        button::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to right, transparent, #e09);
            transform: scaleX(0);
            transition: transform 0.3s ease-out;
        }

        button:hover {
            background-position: calc(100% + 200px) 0;
        }

        button:hover span {
            transform: translateX(200px);
        }

        button:hover::before {
            transform: scaleX(1);
        }

        /* Добавьте эти стили внутрь вашего existing stylesheets */

        dialog {
            width: 400px;
            padding: 2.5rem;
            border-radius: 10px;
            background: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border: none;
            overflow: hidden;
            z-index: 999;
            text-align: center;
        }

        dialog::backdrop {
            background: rgba(0, 0, 0, 0.5);
        }

        dialog form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
            width: 100%;
            align-items: center;
        }

        dialog h2 {
            margin-bottom: 1.2rem;
            text-align: center;
        }

        dialog input,
        dialog select {
            width: 100%;
            padding: 0.7rem;
            font-size: 1rem;
            border-radius: 5px;
            border: 1px solid #ddd;
            outline: none;
        }

        /* Стили для кнопок действий */
        .actions button {
            transition: all 0.3s ease;
        }

        .actions button:hover {
            transform: scale(1.05);
            background-color: #e09;
        }

        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(255, 82, 15, 0.7); }
            70% { box-shadow: 0 0 0 10px rgba(255, 82, 15, 0); }
            100% { box-shadow: 0 0 0 0 rgba(255, 82, 15, 0); }
        }

    </style>
</head>
<body>

<div class="actions">
    <button class="back-button" onclick="window.location.href='/books'">
        <i class="fas fa-arrow-left"></i> Назад к библиотеке
    </button>
</div>

<div class="card">

    <h1><%= book.title %> — <%= book.author %></h1>
    <p>Дата выпуска: <%= book.publishedDate %></p>
    <p class="status <%= book.available ? '' : 'out-of-stock' %>">Статус: <%= book.available ? 'В наличии' : 'На руках' %></p>

    <% if (!book.available) { %>
        <div class="actions">
            <button id="borrowerInfo" onclick="openDialog();">Информация о заёмщике</button>
        </div>
    <% } %>

    <dialog id="borrowerDialog">
        <h2>Информация о заёмщике</h2>
        <p><strong>Имя:</strong> <%= book.borrower %></p>
        <p><strong>Дата возврата:</strong> <%= book.dueDate %></p>
        <div class="actions">
            <button onclick="closeDialog()">Закрыть</button>
        </div>
    </dialog>

    <div class="form-section">
        <h2>Редактировать книгу</h2>
        <form action="/books" method="POST">
            <input type="hidden" name="action" value="update">
            <input type="hidden" name="id" value="<%= book.id %>">
            <label>Автор:
                <input type="text" name="author" value="<%= book.author %>">
            </label>
            <label>Дата выпуска:
                <input type="date" name="publishedDate" value="<%= book.publishedDate %>">
            </label>
            <div class="actions">
                <button type="submit">Сохранить изменения</button>
            </div>
        </form>
    </div>

    <% if (!book.available) { %>
        <form action="/books/return" method="POST">
            <input type="hidden" name="id" value="<%= book.id %>">
            <div class="actions">
                <button type="submit">Вернуть книгу</button>
            </div>
        </form>
    <% } else { %>
        <form action="/books/borrow" method="POST">
            <input type="hidden" name="id" value="<%= book.id %>">
            <label>Имя заемщика:
                <input type="text" name="borrower" required>
            </label>
            <label>Дата возврата:
                <input type="date" name="dueDate" required>
            </label>
            <div class="actions">
                <button type="submit" id="borrowButton">Взять книгу</button>
            </div>
        </form>
    <% } %>
</div>

<script>
    // Функция для проверки даты возврата
    function validateReturnDate(event) {
        const dueDateInput = document.querySelector('input[name="dueDate"]');
        const dueDate = new Date(dueDateInput.value);
        const today = new Date();
        today.setHours(0, 0, 0, 0); // Убираем время из текущей даты

        // Если дата возврата меньше сегодняшнего дня
        if (dueDate < today) {
            event.preventDefault(); // Отменить отправку формы
            alert("Дата возврата не может быть раньше сегодняшнего дня.");
        }
    }

    // Добавление обработчика для кнопки "Взять книгу"
    document.addEventListener("DOMContentLoaded", function() {
        const borrowButton = document.getElementById("borrowButton");

        if (borrowButton) {
            borrowButton.addEventListener("click", validateReturnDate); // Проверка перед отправкой формы
        }
    });
</script>
</body>
</html>
